# vim: ft=sh
# set variables
export BROWSER=qutebrowser

# set keyboard
setxkbmap -layout ee,us -variant us,altgr-intl -option ctrl:nocaps,grp_led:caps,grp:alt_space_toggle
xset r rate 300 50

# additional keybindings
xbindkeys

# touchpad gestures
if command -v libinput-gestures &>/dev/null; then
    libinput-gestures &
fi
