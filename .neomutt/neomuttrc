set header_cache = ~/.cache/neomutt

# Personal configuration
source ~/.neomutt/local.rc

# Mail directories
set folder = ~/.mail
source ~/.neomutt/mailboxes
set spoolfile = "+INBOX"
set record = "+Sent"
set postponed = "+Drafts"
set trash = "+Trash"

# Sending
set sendmail = /usr/bin/msmtp
set use_from = yes
set use_envelope_from = yes
set reverse_name = yes
set edit_headers = yes
set send_charset = "us-ascii:utf-8"
set attribution = "On %d, %f wrote:"
set date_format = "%a, %-d %b %Y at %T %z"
set empty_subject = "Re: "
set mime_forward = ask-yes
set forward_format = "Fwd: [%F] %s"
set fast_reply = yes
set abort_noattach = ask-yes

# PGP
source ~/.neomutt/gpg.rc
#set crypt_autosign = yes

# Contacts
set alias_file = ~/.neomutt/alias
source ~/.neomutt/alias
set query_command = "khard email --parsable --search-in-source-files '%s'"
bind editor <Tab> complete-query
bind editor ^T complete
macro index,pager A \
    "<pipe-message>khard add-email<return>" \
    "add the sender email address to khard"
#set reverse_alias = yes

# Archiving and syncing
set delete = yes
set confirmappend = no
macro index,pager e \
    "<save-message>=Archive<enter>" \
    "archive message"
bind index,pager E edit-or-view-raw-message
macro index S \
    "<shell-escape>pkill -SIGUSR1 offlineimap<return>" \
    "trigger full sync of all accounts in offlineimap"

# Virtual mailboxes
set nm_default_uri = "notmuch://$HOME/.mail"
virtual-mailboxes "All Mail" "notmuch://?query=*"
bind index,pager X change-vfolder
bind index,pager x vfolder-from-query
bind index,pager + entire-thread

# Display
set sort = threads
set sort_aux = reverse-last-date-received
set strict_threads = yes
set pager_index_lines = 8
auto_view text/html
alternative_order text/plain text/html
set assumed_charset = "utf-8:us-ascii"
set print = yes
set print_command = "$PAGER"
set print_split = yes
set wait_key = no

# UI
set sleep_time = 0
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats = yes
set index_format = "%4C %Z %(%d %b %H:%M) %-15.15L  %s"
subjectrx '\[[^]]*\]:? *' '%L%R'
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open
bind index,pager B sidebar-toggle-visible
bind pager j next-line
bind pager k previous-line
bind attach,index,pager \Cd next-page
bind attach,index,pager \Cu previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry
bind index,pager a group-reply
macro index i \
    "<change-folder>=INBOX<enter>" \
    "go to inbox"

# History
set history = 256
set save_history = 256

# Colours
source ~/.neomutt/colors.linux
