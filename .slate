# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind ;:cmd;alt;ctrl       resize +5% +0
bind ;:cmd;alt;ctrl;shift resize -5% +0
bind j:cmd;alt;ctrl       resize +5% +0 bottom-right
bind j:cmd;alt;ctrl;shift resize -5% +0 bottom-right
bind k:cmd;alt;ctrl       resize +0   +5%
bind k:cmd;alt;ctrl;shift resize +0   -5%
bind l:cmd;alt;ctrl       resize +0   +5% bottom-right
bind l:cmd;alt;ctrl;shift resize +0   -5% bottom-right

# Push Bindings
bind ;:cmd;alt;shift    push right bar-resize:screenSizeX/2
bind j:cmd;alt;shift    push left  bar-resize:screenSizeX/2
bind l:cmd;alt;shift    push up    bar-resize:screenSizeY/2
bind k:cmd;alt;shift    push down  bar-resize:screenSizeY/2

# Nudge Bindings
bind right:cmd;alt nudge +5% +0
bind left:cmd;alt  nudge -5% +0
bind up:cmd;alt    nudge +0   -5%
bind down:cmd;alt  nudge +0   +5%

# Throw Bindings
bind m:cmd;alt;shift    throw 0 resize
bind 1:ctrl;alt;cmd     throw 0 resize
bind 2:ctrl;alt;cmd     throw 1 resize
bind 3:ctrl;alt;cmd     throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind ;:cmd;alt    focus right
bind j:cmd;alt    focus left
bind l:cmd;alt    focus up
bind k:cmd;alt    focus down
bind ':cmd;alt    focus behind

# Window Hints
bind esc:cmd hint